@model Usuario

<h1>Registre um usuário</h1>

<form action="RegistrarUsuario" method="post">
    <input type="text" name="Nome" id="UsuarioNome" placeholder="Nome">
    <input type="text" name="Login" id="UsuarioLogin" placeholder="Login">
    <input type="text" name="Senha" id="UsuarioSenha" placeholder="Senha">

    <select name="Tipo" id="UsuarioTipo">
        <option value="@Usuario.admin">Administrador</option>
        <option value="@Usuario.padrao">Padrão</option>
    </select>

    <input type="submit" value="REGISTRAR">
</form>