@model Usuario

<h1>Alerta!</h1>
<h2>Tem certerza que deseja Excluir o Usuário @Model.Nome (@Model.Login)? </h2>
<p>A exclusão é irreversível!</p>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="Id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELADA">
    <input name ="desicao" type="submit" value="EXCLUIR">
</form>